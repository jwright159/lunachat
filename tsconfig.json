{
	"compilerOptions": {
		"module": "es6",
		"target": "es5",
		"noImplicitAny": true,
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"*": ["node_modules/*"]
		},
		"moduleResolution": "node",
		"jsx": "react",
		"allowSyntheticDefaultImports": true,
	},
	"include": [
		"src/**/*",
	]
}